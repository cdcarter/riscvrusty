[build]
target = "riscv64gc-unknown-none-elf"
rustflags = ['-Clink-arg=-Tsrc/lds/virt.lds']

[target.riscv64gc-unknown-none-elf]
runner = "qemu-system-riscv64 -machine virt -cpu rv64 -smp 4 -m 128M -nographic  -serial mon:stdio -bios none -drive if=none,format=raw,file=hdd.dsk,id=foo -device virtio-blk-device,drive=foo -kernel "